@model Aluno

<h1>Create page Aluno </h1>



<form asp-controller="Aluno" asp-action="Create" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Curso</label>
            <input type="text" class="form-control" asp-for="Nome"  placeholder="Nome do Aluno">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group col-md-6">
            <label >Matricula</label>
            <input type="number" class="form-control" asp-for="Matricula" placeholder="Digite o número da Matricula">
            @Html.ValidationMessageFor(x => x.Matricula)
        </div>

         <div class="form-group col-md-6">
            <label >Data de Nascimento</label>
            <input type="datetime" class="form-control" asp-for="DataNascimento" placeholder="Digite a Data de Nascimento">
            @Html.ValidationMessageFor(x => x.DataNascimento)
        </div>
   

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>